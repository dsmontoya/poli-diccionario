<h1>Listing unidades</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Siglas</th>
      <th>Descripcion</th>
      <th>Url</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Extension</th>
      <th>Email</th>
      <th>Web</th>
      <th>Escudo</th>
      <th>Portada</th>
      <th>Secure token</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unidades.each do |unidad| %>
      <tr>
        <td><%= unidad.nombre %></td>
        <td><%= unidad.siglas %></td>
        <td><%= unidad.descripcion %></td>
        <td><%= unidad.url %></td>
        <td><%= unidad.direccion %></td>
        <td><%= unidad.telefono %></td>
        <td><%= unidad.extension %></td>
        <td><%= unidad.email %></td>
        <td><%= unidad.web %></td>
        <td><%= unidad.escudo %></td>
        <td><%= unidad.portada %></td>
        <td><%= unidad.secure_token %></td>
        <td><%= link_to 'Show', unidad %></td>
        <td><%= link_to 'Edit', edit_unidad_path(unidad) %></td>
        <td><%= link_to 'Destroy', unidad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

