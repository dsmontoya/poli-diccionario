%h1 Listing materias
%table
  %thead
    %tr
      %th Nombre
      %th Descripcion
      %th{:colspan => "3"}
  %tbody
    - @materias.each do |materia|
      %tr
        %td= materia.nombre
        %td= materia.descripcion
        %td= link_to 'Show', materia
        %td= link_to 'Edit', edit_materia_path(materia)
        %td= link_to 'Destroy', materia, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Materia', new_materia_path